@model VLO.Models.OrdenesViewModel
@{
    ViewBag.Title = "Index";
}
<h2>Mesas</h2>
<div class="col-lg-4">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-default active" onclick="Filter('.all')">
            <input type="radio" name="options" onclick="Filter('.all')" id="option1" autocomplete="off" checked> All
        </label>
        <label class="btn btn-default" onclick="Filter('.Disponible')">
            <input type="radio" name="options" onclick="Filter('.Disponible')" id="option2" autocomplete="off"> Disponibles
        </label>
        <label class="btn btn-default" onclick="Filter('.Ocupada')">
            <input type="radio" name="options" onclick="Filter('.Ocupada')" id="option3" autocomplete="off"> Ocupadas
        </label>
    </div>
</div>
<br />
<br />
<br />
@{

    <div class="row col-md-12">
        @foreach (var item in Model.Mesa)
        {
            var classfilter = "Disponible";
            if (item.Estado == false)
            {
                classfilter = "Ocupada";
            }
            <a class="all @classfilter" href="/Ordenes/Menu/@item.IdMesa">
                <div class="col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>Mesa @item.NumMesa</h3>
                        </div>
                        <div>
                            @if (item.Estado == true)
                            {
                                <buttom href="/Ordenes/Menu/@item.IdMesa" class='@(item.Estado==true?"btn btn-success":"btn btn-danger") m-l-10 m-b-10'>@(item.Estado == true ? "Disponible" : "Ocupada")</buttom>
                            }
                            else if (item.Estado == false)
                            {
                                <buttom href="/Ordenes/Menu/@item.IdMesa" class='@(item.Estado==true?"btn btn-success":"btn btn-danger") m-l-10 m-b-10'>@(item.Estado == true ? "Disponible" : "Ocupada")</buttom>

                            }
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>  
    
}

<script>
    function Filter(text) {
        if (text == ".all") {
            $(".all").show()
            return;
        }
        $(".all").hide()
        $(text).show();
    }
</script>
