@model VLO.Models.OrdenesViewModel
@{
    ViewBag.Title = "Index";
}
<h2>Mesas</h2>

<br />
<br />
<br />
@{

    <div class="row col-md-12">
        @foreach (var item in Model.Pedido)
        {
            var classfilter = "Disponible";
            if (item.Mesa.Estado == false)
            {
                classfilter = "Ocupada";
            }
            <a class="all @classfilter" href="/Ordenes/Menu/@item.IdMesa">
                <div class="col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>Mesa @item.Mesa.NumMesa</h3>
                        </div>
                        <div>
                            @if (item.Mesa.Estado == true)
                            {
                                <a href="/Ordenes/Menu/@item.IdMesa?idPedido = @item.IdPedido" class='@(item.Mesa.Estado==true?"btn btn-success":"btn btn-danger") m-l-10 m-b-10'>@(item.Mesa.Estado == true ? "Disponible" : "Ocupada")</a>
                            }
                            else if (item.Mesa.Estado == false)
                            {
                                <a href="/Ordenes/Menu/@item.IdMesa?idPedido=@item.IdPedido" class='@(item.Mesa.Estado==true?"btn btn-success":"btn btn-danger") m-l-10 m-b-10'>@(item.Mesa.Estado == true ? "Disponible" : "Ocupada")</a>

                            }
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
    <div class="row col-md-12">
        @foreach (var item in Model.Mesa)
        {
            var classfilter = "Disponible";
            if (item.Estado == false)
            {
                classfilter = "Ocupada";
            }
            if (item.Estado == true)
            {
                <a class="all @classfilter" href="/Ordenes/Menu/@item.IdMesa">
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3>Mesa @item.NumMesa</h3>
                            </div>
                            <div>

                                <a href="/Ordenes/Menu/@item.IdMesa" class='@(item.Estado==true?"btn btn-success":"btn btn-danger") m-l-10 m-b-10'>@(item.Estado == true ? "Disponible" : "Ocupada")</a>

                            </div>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
}

<script>
    function Filter(text) {
        if (text == ".all") {
            $(".all").show()
            return;
        }
        $(".all").hide()
        $(text).show();
    }
</script>
